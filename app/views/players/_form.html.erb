<%= form_with(model: [@game, player]) do |form| %>
  <% if player.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(player.errors.count, "error") %> prohibited this player from being saved:</h2>

      <ul>
        <% player.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :user_id, class: "form-label" %>
    <%= form.collection_select :user_id, User.all, :id, :name, { prompt: "Select user" }, class: "form-control" %>
    <small class="form-text text-muted">Linking a user will allow you to view scores for each player at each game.</small>
  </div>

  <div class="mb-5">
    <%= form.submit submit_text, class: "btn btn-primary" %>
  </div>
<% end %>
