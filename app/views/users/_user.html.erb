<div id="<%= dom_id user %>" class="mt-3">
  <p>
    <strong>Name:</strong>
    <%= user.name %>
  </p>

  <% unless user.players.empty? %>
    <hr/>
    <h1>Players linked to this user</h1>
    <ul class="list-group">
      <% user.players.each do |player| %>
        <%= link_to game_path(player.game), class: "list-group-item list-group-item-action" do %>
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1"><%= player.name%></h5>
          </div>
          <p class="mb-1">Game: <%= player.game.name %></p>
          <small>And some small print.</small>
        <% end %>
      <% end %>
    </ul>

    <hr/>

    <div data-controller="user-players-reports" class="mt-5">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Reports for each player</h1>
        <div hidden data-user-players-reports-target="userId"><%= user.id %></div>
      </div>
      <div class="d-flex justify-content-center align-items-center" data-user-players-reports-target="chart"></div>
    </div>
  <% else %>
    <p>This user has no players linked to them.</p>
  <% end %>
</div>
